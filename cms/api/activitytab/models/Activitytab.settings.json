{
  "connection": "default",
  "collectionName": "activitytab",
  "info": {
    "name": "activitytab",
    "description": "A tab page in an activity"
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "tab_label": {
      "default": "",
      "type": "string",
      "required": true
    },
    "content": {
      "default": "",
      "type": "text"
    },
    "priority": {
      "default": 1,
      "min": 1,
      "type": "integer",
      "required": true
    },
    "activity": {
      "model": "activity",
      "via": "activitytabs"
    },
    "ref_name": {
      "default": "",
      "type": "string"
    }
  }
}